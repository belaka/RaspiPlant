{% extends 'layout.html.twig' %}

{% block title %}RaspiPlant | Actuator{% endblock %}

{% block stylesheet %}
    <style type="text/css">
        .onoffswitch {
            position: relative; width: 86px;
            -webkit-user-select:none; -moz-user-select:none; -ms-user-select: none;
        }
        .onoffswitch-checkbox {
            display: none;
        }
        .onoffswitch-label {
            display: block; overflow: hidden; cursor: pointer;
            border: 2px solid #999999; border-radius: 50px;
        }
        .onoffswitch-inner {
            display: block; width: 200%; margin-left: -100%;
            transition: margin 0.3s ease-in 0s;
        }
        .onoffswitch-inner:before, .onoffswitch-inner:after {
            display: block; float: left; width: 50%; height: 24px; padding: 0; line-height: 24px;
            font-size: 18px; color: white; font-family: Trebuchet, Arial, sans-serif; font-weight: bold;
            box-sizing: border-box;
        }
        .onoffswitch-inner:before {
            content: "ON";
            padding-left: 12px;
            background-color: #34A7C1; color: #FFFFFF;
        }
        .onoffswitch-inner:after {
            content: "OFF";
            padding-right: 12px;
            background-color: #EEEEEE; color: #999999;
            text-align: right;
        }
        .onoffswitch-switch {
            display: block; width: 31px; margin: -3.5px;
            background: #FFFFFF;
            position: absolute; top: 0; bottom: 0;
            right: 58px;
            border: 2px solid #999999; border-radius: 50px;
            transition: all 0.3s ease-in 0s; 
        }
        .onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-inner {
            margin-left: 0;
        }
        .onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-switch {
            right: 0px; 
        }
    </style>
{% endblock %}

{% block page_title %}
    RaspiPlant Actuators
    <small>board actuators </small>
{% endblock %}

{% block page_breadcrumb %}                                
    <li>
        <a href="{{path('board.dashboard.main')}}">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{path('board.actuator.main')}}">Actuator</a>
        <i class="fa fa-circle"></i>
    </li>
{% endblock %}

{% block page_content %}
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}

    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <!-- BEGIN DASHBOARD STATS 1-->
    <div class="row">
        <div class="table-responsive">
            <table class="table table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>#</th> <th>Name</th> <th>Slug</th> <th>Class</th> <th>pin</th> <th>state</th>
                    </tr>
                </thead>
                <tbody>
                    {% for actuator in actuators %}
                    <tr>
                        <td>{{ actuator.id }}</td>
                        <td>{{ actuator.name }}</td>
                        <td>{{ actuator.slug }}</td>
                        <td>{{ actuator.class }}</td>
                        <td>{{ actuator.pin }}</td>
                        <td>
                            <div class="onoffswitch">
                                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="onoffswitch-{{ actuator.id }}" {% if actuator.state == 1  %}checked{% endif %}>
                                <label class="onoffswitch-label" for="onoffswitch-{{ actuator.id }}">
                                    <span class="onoffswitch-inner"></span>
                                    <span class="onoffswitch-switch"></span>
                                </label>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}

{% block javascript %}
<script type="text/javascript"> 
    jQuery(document).ready(function() {    
        jQuery('.onoffswitch-checkbox').click(function(){
            
            var id = this.id.replace('onoffswitch-','');
            
            var values = jQuery("input[type='checkbox']:checked").map(function () {
                return this.value;
            }).get();    
            
            var data = 'checkbox='+values;
            
            jQuery.ajax({
                url: "{{ path('board.actuator.main') }}/update/"+ id,
                type: "POST",
                data: data,
                cache: false,
                success: function (json) {
                    console.log(json);
                },
                error: function (json) {
                    console.log(json);
                }
            });
        });
    });
</script>
{% endblock %}
