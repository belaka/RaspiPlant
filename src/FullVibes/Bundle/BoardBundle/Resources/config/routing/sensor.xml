<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sensor_index" path="/" methods="GET">
        <default key="_controller">BoardBundle:Sensor:index</default>
    </route>

    <route id="sensor_show" path="/{id}/show" methods="GET">
        <default key="_controller">BoardBundle:Sensor:show</default>
    </route>

    <route id="sensor_new" path="/new" methods="GET|POST">
        <default key="_controller">BoardBundle:Sensor:new</default>
    </route>

    <route id="sensor_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">BoardBundle:Sensor:edit</default>
    </route>

    <route id="sensor_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">BoardBundle:Sensor:delete</default>
    </route>

</routes>
