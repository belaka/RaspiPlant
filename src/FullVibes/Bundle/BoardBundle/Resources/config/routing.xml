<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="board.main" path="/">
        <default key="_controller">BoardBundle:Board:index</default>
    </route>
    
    <route id="dashboard.main" path="/dashboard">
        <default key="_controller">BoardBundle:Dashboard:index</default>
    </route>
    
    <route id="dashboard.atomizer" path="/atomizer">
        <default key="_controller">BoardBundle:Dashboard:atomizer</default>
    </route>
    
    <route id="gpio.main" path="/gpio">
        <default key="_controller">BoardBundle:Gpio:index</default>
    </route>
    
</routes>
