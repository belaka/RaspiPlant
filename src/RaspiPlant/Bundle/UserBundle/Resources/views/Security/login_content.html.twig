{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<section class="content">
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group field-text">
        <label for="username" class="sr-only form-control-label required">{{ 'security.login.username'|trans }}</label>
        <div class="form-widget form-widget-with-icon">
            <i class="fa fa-fw fa-user"></i>
            <input type="text" id="username" name="_username" value="{{ last_username }}" autocomplete="username" class="form-control" placeholder="{{ _username_label }}"  required autofocus/>
        </div>
    </div>

    <div class="form-group field-password">
        <label for="password" class="sr-only form-control-label required">{{ 'security.login.password'|trans }}</label>
        <div class="form-widget form-widget-with-icon">
            <i class="fa fa-fw fa-lock"></i>
            <input type="password" id="password" name="_password" autocomplete="current-password" class="form-control" placeholder="{{ _password_label }}" required />
        </div>
    </div>

    <!--
    <div class="form-group field-remember">
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <div class="form-widget form-widget-with-icon">
            <i class="fa fa-fw fa-lock"></i>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>

    </div>
    -->

    <div class="form-group field-button">
        <button type="submit" class="btn btn-primary btn-lg btn-block" onclick="this.form.submit(); this.disabled=true;">{{ 'security.login.submit'|trans }}</button>
    </div>
</form>
</section>
