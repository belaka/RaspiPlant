<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="RaspiPlant\Bundle\BoardBundle\Entity\SensorValue"
            table="sensor__value"
            repository-class="RaspiPlant\Bundle\BoardBundle\Repository\ORM\SensorValueRepository">

        <id name="id" type="integer" column="id">
            <generator />
        </id>

        <field name="sensorValueKey"    column="sensor_value_key"   length="255" />
        <field name="sensorKey"         column="sensor_key"         length="255" />
        <field name="sensorValue"       column="sensor_value"       type="decimal"   scale="10"   precision="20"    nullable="true"  />
        <field name="sensorDate"        column="sensor_date"        type="datetime" />

        <many-to-one field="sensor" target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Sensor" inversed-by="sensorValues">
            <join-column name="sensor_id" />
        </many-to-one>

    </entity>

</doctrine-mapping>
