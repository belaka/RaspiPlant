<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="RaspiPlant\Bundle\BoardBundle\Entity\Board"
            table="board"
            repository-class="RaspiPlant\Bundle\BoardBundle\Repository\ORM\BoardRepository">

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator />
        </id>

        <field name="name" column="name" length="191" unique="true"/>
        <field name="slug" column="slug" length="191" unique="true"/>
        <field name="active" column="active" type="boolean" />

        <many-to-many field="sensors" target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Sensor">
            <join-table name="board_sensors">
                <join-columns>
                    <join-column name="board_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="sensor_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="actuators" target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Actuator">
            <join-table name="board_actuators">
                <join-columns>
                    <join-column name="board_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="actuator_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="communicators" target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Communicator">
            <join-table name="board_communicators">
                <join-columns>
                    <join-column name="board_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="communicator_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="displays" target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Display">
            <join-table name="board_displays">
                <join-columns>
                    <join-column name="board_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="display_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>
