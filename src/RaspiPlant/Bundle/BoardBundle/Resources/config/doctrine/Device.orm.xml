<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="RaspiPlant\Bundle\BoardBundle\Entity\Device"
            table="device"
            repository-class="RaspiPlant\Bundle\BoardBundle\Repository\ORM\DeviceRepository">

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator />
        </id>

        <field name="name" column="name" length="191" unique="true"/>
        <field name="slug" column="slug" length="191" unique="true"/>
        <field name="class"      column="class"     length="255"  nullable="true"/>
        <field name="address"    column="address"   length="255"  nullable="true"/>
        <field name="active"     column="active"    type="boolean" />

        <one-to-many field="sensors"   target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Sensor"     mapped-by="device" />
        <one-to-many field="actuators" target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Actuator"   mapped-by="device" />

        <many-to-one field="board" target-entity="RaspiPlant\Bundle\BoardBundle\Entity\Board" inversed-by="devices">
            <join-column name="board_id" />
        </many-to-one>

    </entity>

</doctrine-mapping>
