<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="actuator_index" path="/" methods="GET">
        <default key="_controller">RaspiPlant\Bundle\BoardBundle\Controller\ActuatorController::indexAction</default>
    </route>

    <route id="actuator_show" path="/{id}/show" methods="GET">
        <default key="_controller">BRaspiPlant\Bundle\BoardBundle\Controller\ActuatorController::showAction</default>
    </route>

    <route id="actuator_new" path="/new" methods="GET|POST">
        <default key="_controller">RaspiPlant\Bundle\BoardBundle\Controller\ActuatorController::newAction</default>
    </route>

    <route id="actuator_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">RaspiPlant\Bundle\BoardBundle\Controller\ActuatorController::editAction</default>
    </route>

    <route id="actuator_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">RaspiPlant\Bundle\BoardBundle\Controller\ActuatorController::deleteAction</default>
    </route>

    <route id="actuator_update" path="/{id}/update" methods="POST">
        <default key="_controller">RaspiPlant\Bundle\BoardBundle\Controller\ActuatorController::updateAction</default>
    </route>
</routes>
