{% extends 'layout.html.twig' %}

{% block page_title %}
    RaspiPlant Devices
    <small>board devices </small>
{% endblock %}

{% block page_breadcrumb %}
    <li>
        <a href="{{path('board.dashboard.main')}}">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{path('device_index')}}">Device</a>
        <i class="fa fa-circle"></i>
    </li>
{% endblock %}


{% block page_content %}
<div class="content-main">
    <div class="table-responsive">
        <table class="table table table-condensed table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Class</th>
                    <th>Address</th>
                    <th>Active</th>
                    <th>Id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for device in devices %}
                <tr>
                    <td><a href="{{ path('device_show', { 'id': device.id }) }}">{{ device.name }}</a></td>
                    <td>{{ device.slug }}</td>
                    <td>{{ device.class }}</td>
                    <td>{{ device.address }}</td>
                    <td>{% if device.active %}Yes{% else %}No{% endif %}</td>
                    <td>{{ device.id }}</td>
                    <td>
                        <a href="{{ path('device_show', { 'id': device.id }) }}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('device_edit', { 'id': device.id }) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                        <a href="{{ path('device_delete', { 'id': device.id }) }}" class="btn btn-danger"><i class="fa fa-close"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary" href="{{ path('device_new') }}">Create a new device</a>
</div>

{% endblock %}
